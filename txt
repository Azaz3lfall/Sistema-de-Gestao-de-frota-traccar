server {
    listen 443 ssl http2;
    server_name dev.rastreadorautoram.com.br;

    # CORRIGIDO: Certificados SSL para dev.rastreadorautoram.com.br
    ssl_certificate /etc/letsencrypt/live/dev.rastreadorautoram.com.br/fullchain.pem; # Corrigido!
    ssl_certificate_key /etc/letsencrypt/live/dev.rastreadorautoram.com.br/privkey.pem; # Corrigido!
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # Regra para a API de Gestão
    location ^~ /gestao/ {
        proxy_pass http://127.0.0.1:3666; # Aponta para o seu servidor Node.js
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_cache_bypass $http_upgrade;
    }

    # Regra para /api/
    location /api/ {
        proxy_pass http://127.0.0.1:8082/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Regra para o frontend (e tudo o mais)
    location / {
        proxy_pass http://127.0.0.1:3000; # Aponta para o seu servidor de frontend
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_cache_bypass $http_upgrade;
    }
}
# O segundo bloco 'server' para redirecionamento HTTP para HTTPS está correto
server {
    if ($host = dev.rastreadorautoram.com.br) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name dev.rastreadorautoram.com.br;
    listen 80;
    return 404; # managed by Certbot
}